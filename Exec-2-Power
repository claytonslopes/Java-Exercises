import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		Double valor1, pi, area;
		
		valor1 = sc.nextDouble();
		
		pi = 3.14159;
		area = pi * Math.pow(valor1, 2);

		System.out.printf("A=%.4f%n", area);
		
		sc.close();
	}

}
